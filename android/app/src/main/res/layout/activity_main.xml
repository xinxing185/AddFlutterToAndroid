<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zx.android.MainActivity">
    <Button
        android:id="@+id/btn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Flutter Main"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <Button
        android:id="@+id/btn_page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_main"
        android:text="Flutter List"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <Button
        android:id="@+id/btn_page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_page1"
        android:text="Flutter Grid"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>


</androidx.constraintlayout.widget.ConstraintLayout>